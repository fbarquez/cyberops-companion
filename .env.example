# =============================================================================
# CyberOps Companion - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
#
# Quick start:
# 1. cp .env.example .env
# 2. Generate secrets: openssl rand -hex 32
# 3. Replace "change-me" values
# 4. docker-compose up -d

# =============================================================================
# Database Configuration
# =============================================================================
# Used by docker-compose for initial PostgreSQL setup
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-postgres-password
POSTGRES_DB=cyberops_companion
POSTGRES_PORT=5432

# Application database connection (can be different from docker-compose user)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:change-me-postgres-password@db:5432/cyberops_companion

# =============================================================================
# Redis Configuration
# =============================================================================
# Used for caching, sessions, and background task queues
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# =============================================================================
# Security - REQUIRED
# =============================================================================
# Generate these with: openssl rand -hex 32
# DO NOT use the default values in production!

# Main application secret (used for various encryption)
SECRET_KEY=change-me-generate-with-openssl-rand-hex-32

# JWT token signing key
JWT_SECRET=change-me-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256

# Token expiration settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000

# Workers for production (use 1 for development)
API_WORKERS=1

# =============================================================================
# Frontend Configuration
# =============================================================================
WEB_PORT=3000

# API URL as seen by the browser (must be accessible from client)
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# Production example:
# CORS_ORIGINS=https://app.yourdomain.com,https://yourdomain.com

# =============================================================================
# Logging & Debug
# =============================================================================
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Set to true only in development
DEBUG=false

# =============================================================================
# Email / SMTP Configuration (Optional)
# =============================================================================
# Set EMAIL_ENABLED=true and configure SMTP to enable email notifications.
# For Gmail: use an App Password (not your regular password)
# For testing: use Mailtrap.io (free) to catch emails without sending

EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=CyberOps Companion
SMTP_TLS=true
SMTP_SSL=false

# =============================================================================
# Notification Webhooks (Optional)
# =============================================================================
# Slack webhook URL for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Microsoft Teams webhook URL
# TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/xxx

# =============================================================================
# NVD API (National Vulnerability Database)
# =============================================================================
# Optional but recommended - increases rate limit from 5 to 50 requests/30s
# Get your free API key at: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=

# =============================================================================
# External API Keys - Threat Intelligence (Optional)
# =============================================================================
# These enable IOC enrichment in the Threat Intelligence module

# VirusTotal API - https://www.virustotal.com/gui/my-apikey
# VIRUSTOTAL_API_KEY=

# AbuseIPDB API - https://www.abuseipdb.com/account/api
# ABUSEIPDB_API_KEY=

# Shodan API - https://account.shodan.io/
# SHODAN_API_KEY=

# GreyNoise API - https://viz.greynoise.io/account/api-key
# GREYNOISE_API_KEY=

# AlienVault OTX API - https://otx.alienvault.com/api
# OTX_API_KEY=

# =============================================================================
# File Storage (Optional - for future file upload feature)
# =============================================================================
# Local storage path (default)
# UPLOAD_PATH=/app/uploads

# S3-compatible storage (for production)
# S3_ENDPOINT=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=cyberops-companion-files
# S3_REGION=eu-central-1

# =============================================================================
# Feature Flags (Optional)
# =============================================================================
# Enable/disable specific features
# ENABLE_REGISTRATION=true
# ENABLE_SIMULATIONS=true
# ENABLE_API_DOCS=true

# =============================================================================
# Rate Limiting (Optional)
# =============================================================================
# Requests per minute for API endpoints
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_PERIOD=60
