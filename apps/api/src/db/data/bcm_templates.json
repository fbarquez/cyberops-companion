        {"item": "Establish command center", "required": true},
        {"item": "Brief CEO/executive leadership", "required": true},
        {"item": "Activate required support plans", "required": true}
      ],
      "roles_responsibilities": [
        {"role": "Crisis Manager", "responsibilities": ["Overall crisis leadership", "Final decision authority", "Executive liaison"]},
        {"role": "Operations Lead", "responsibilities": ["Operational response", "Resource coordination", "Tactical execution"]},
        {"role": "Communications Lead", "responsibilities": ["All communications", "Stakeholder management", "Media handling"]},
        {"role": "Legal Counsel", "responsibilities": ["Legal advice", "Regulatory compliance", "Liability assessment"]}
      ]
    }
  ],
  "scenario_templates": [
    {
      "name": "Ransomware Attack",
      "category": "cyber_attack",
      "description": "A ransomware attack encrypts critical business data and systems, demanding payment for decryption keys. This scenario assumes widespread encryption affecting multiple business-critical systems.",
      "typical_likelihood": "possible",
      "typical_impact": "major",
      "suggested_controls": "Endpoint protection, regular backups, network segmentation, user awareness training, incident response procedures",
      "response_priorities": ["Contain the spread", "Assess damage", "Preserve evidence", "Begin recovery from backups"]
    },
    {
      "name": "Data Center Outage",
      "category": "technical_failure",
      "description": "Complete loss of primary data center due to power failure, hardware failure, or environmental incident. All hosted systems and services unavailable.",
      "typical_likelihood": "unlikely",
      "typical_impact": "catastrophic",
      "suggested_controls": "Redundant power, UPS systems, disaster recovery site, regular failover testing",
      "response_priorities": ["Activate DR site", "Restore critical services", "Communicate with users", "Assess root cause"]
    },
    {
      "name": "Key Personnel Unavailability",
      "category": "human_error",
      "description": "Multiple key personnel unavailable simultaneously due to illness, accident, or other circumstances. Critical knowledge and decision-making capability impacted.",
      "typical_likelihood": "possible",
      "typical_impact": "moderate",
      "suggested_controls": "Cross-training, documentation, succession planning, knowledge management",
      "response_priorities": ["Identify replacement personnel", "Access documented procedures", "Prioritize critical decisions"]
    },
    {
      "name": "Supply Chain Disruption",
      "category": "supply_chain",
      "description": "Major supplier unable to deliver critical goods or services for extended period. May be due to supplier failure, logistics disruption, or geopolitical factors.",
      "typical_likelihood": "possible",
      "typical_impact": "major",
      "suggested_controls": "Alternative suppliers, inventory buffers, supply chain monitoring, contractual protections",
      "response_priorities": ["Assess inventory levels", "Contact alternative suppliers", "Prioritize allocation", "Communicate with customers"]
    },
    {
      "name": "Building/Facility Inaccessible",
      "category": "infrastructure",
      "description": "Primary office or facility inaccessible due to fire, flood, structural damage, or external incident. Staff unable to access normal workplace.",
      "typical_likelihood": "unlikely",
      "typical_impact": "major",
      "suggested_controls": "Remote work capability, alternate site arrangements, hot desking facilities, cloud services",
      "response_priorities": ["Ensure staff safety", "Activate remote work", "Access alternate facilities", "Recover essential equipment"]
    },
    {
      "name": "Pandemic/Health Crisis",
      "category": "pandemic",
      "description": "Widespread illness affecting significant portion of workforce. Social distancing requirements may prevent normal operations.",
      "typical_likelihood": "possible",
      "typical_impact": "major",
      "suggested_controls": "Remote work infrastructure, hygiene protocols, staff rotation plans, essential worker identification",
      "response_priorities": ["Protect staff health", "Enable remote work", "Identify essential functions", "Maintain critical operations"]
    },
    {
      "name": "Natural Disaster - Flood",
      "category": "natural_disaster",
      "description": "Flooding affects facilities, potentially damaging equipment, disrupting power, and preventing physical access.",
      "typical_likelihood": "unlikely",
      "typical_impact": "major",
      "suggested_controls": "Flood insurance, elevated equipment, waterproofing, off-site backups, alternate facilities",
      "response_priorities": ["Ensure safety", "Protect critical assets", "Activate alternate facilities", "Assess damage"]
    },
    {
      "name": "Power Grid Failure",
      "category": "infrastructure",
      "description": "Extended regional power outage affecting facilities and potentially staff homes. May last hours to days.",
      "typical_likelihood": "unlikely",
      "typical_impact": "moderate",
      "suggested_controls": "UPS systems, generators, fuel reserves, cloud services, mobile devices",
      "response_priorities": ["Verify generator operation", "Conserve UPS power", "Activate cloud failover", "Enable remote work"]
    }
  ],
