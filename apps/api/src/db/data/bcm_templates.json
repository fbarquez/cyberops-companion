{
  "plan_templates": [
    {
      "name": "IT Disaster Recovery Plan Template",
      "plan_type": "it_disaster_recovery",
      "scope_description": "This plan covers the recovery of critical IT systems and infrastructure following a major disruption.",
      "response_phases": [
        {
          "phase": "Detection",
          "duration": "0-1h",
          "description": "Identify and confirm the incident",
          "activities": [
            "Monitor alerts and system status",
            "Confirm nature and scope of disruption",
            "Initial assessment of impact",
            "Notify IT incident response team"
          ]
        },
        {
          "phase": "Assessment",
          "duration": "1-4h",
          "description": "Detailed impact assessment and decision making",
          "activities": [
            "Assess affected systems and data",
            "Determine recovery priority",
            "Evaluate available recovery options",
            "Decision: activate DR plan or resolve locally"
          ]
        },
        {
          "phase": "Activation",
          "duration": "4-8h",
          "description": "Formal plan activation and initial recovery steps",
          "activities": [
            "Formally declare disaster (if applicable)",
            "Activate DR site/infrastructure",
            "Notify stakeholders and management",
            "Begin recovery procedures"
          ]
        },
        {
          "phase": "Recovery",
          "duration": "8-48h",
          "description": "System restoration and service recovery",
          "activities": [
            "Restore systems from backups",
            "Verify data integrity",
            "Test restored systems",
            "Gradually restore services"
          ]
        },
        {
          "phase": "Restoration",
          "duration": "48h+",
          "description": "Return to normal operations",
          "activities": [
            "Full service restoration",
            "Return to primary site (if applicable)",
            "Post-incident review",
            "Documentation and lessons learned"
          ]
        }
      ],
      "activation_checklist": [
        {"item": "Confirm incident severity meets activation criteria", "required": true},
        {"item": "Obtain management approval for DR activation", "required": true},
        {"item": "Notify DR team members", "required": true},
        {"item": "Activate backup/DR site", "required": true},
        {"item": "Verify network connectivity to DR site", "required": true},
        {"item": "Begin system restoration from backups", "required": true},
        {"item": "Notify affected users and stakeholders", "required": true}
      ],
      "recovery_checklist": [
        {"item": "All critical systems restored", "required": true},
        {"item": "Data integrity verified", "required": true},
        {"item": "User access restored", "required": true},
        {"item": "Business applications functional", "required": true},
        {"item": "External connectivity restored", "required": true},
        {"item": "Performance baseline verified", "required": false},
        {"item": "Stakeholders notified of restoration", "required": true}
      ],
      "roles_responsibilities": [
        {"role": "DR Coordinator", "responsibilities": ["Overall DR coordination", "Decision authority", "Stakeholder communication"]},
        {"role": "IT Lead", "responsibilities": ["Technical recovery leadership", "System restoration", "Technical decisions"]},
        {"role": "Network Administrator", "responsibilities": ["Network recovery", "Connectivity verification", "Firewall configuration"]},
        {"role": "Database Administrator", "responsibilities": ["Database recovery", "Data integrity verification", "Backup restoration"]},
        {"role": "Application Owner", "responsibilities": ["Application testing", "User communication", "Business validation"]}
      ]
    },
    {
      "name": "Crisis Communication Plan Template",
      "plan_type": "communication",
      "scope_description": "This plan provides guidelines for internal and external communication during a crisis or major incident.",
      "response_phases": [
        {
          "phase": "Initial Response",
          "duration": "0-2h",
          "description": "First communications upon incident awareness",
          "activities": [
            "Confirm facts before communicating",
            "Notify crisis management team",
            "Prepare initial holding statement",
            "Establish communication command center"
          ]
        },
        {
          "phase": "Stakeholder Notification",
          "duration": "2-8h",
          "description": "Notify all relevant stakeholders",
          "activities": [
            "Notify executive leadership",
            "Inform affected employees",
            "Contact key customers/partners if required",
            "Notify regulators if required"
          ]
        },
        {
          "phase": "Ongoing Communication",
          "duration": "8h+",
          "description": "Regular updates throughout the incident",
          "activities": [
            "Provide regular status updates",
            "Respond to media inquiries",
            "Monitor social media",
            "Document all communications"
          ]
        },
        {
          "phase": "Resolution Communication",
          "duration": "Post-incident",
          "description": "Final communications after incident resolution",
          "activities": [
            "Announce incident resolution",
            "Thank stakeholders for patience",
            "Share lessons learned (if appropriate)",
            "Archive all communications"
          ]
        }
      ],
      "activation_checklist": [
        {"item": "Verify facts before any communication", "required": true},
        {"item": "Identify spokesperson(s)", "required": true},
        {"item": "Prepare holding statement", "required": true},
        {"item": "Brief executive leadership", "required": true},
        {"item": "Establish communication schedule", "required": true}
      ],
      "roles_responsibilities": [
        {"role": "Crisis Communication Lead", "responsibilities": ["Overall communication strategy", "Message approval", "Media relations"]},
        {"role": "Spokesperson", "responsibilities": ["Official statements", "Media interviews", "Public-facing communication"]},
        {"role": "Internal Communications", "responsibilities": ["Employee updates", "Intranet updates", "Town halls"]},
        {"role": "Social Media Manager", "responsibilities": ["Social media monitoring", "Social media responses", "Online reputation"]}
      ]
    },
    {
      "name": "Business Recovery Plan Template",
      "plan_type": "business_recovery",
      "scope_description": "This plan covers the recovery of critical business processes following a disruption.",
      "response_phases": [
        {
          "phase": "Immediate Response",
          "duration": "0-4h",
          "description": "Initial response and assessment",
          "activities": [
            "Assess impact on business operations",
            "Activate business continuity team",
            "Implement immediate workarounds",
            "Communicate with affected teams"
          ]
        },
        {
          "phase": "Interim Operations",
          "duration": "4-24h",
          "description": "Establish temporary operations",
          "activities": [
            "Activate alternate work arrangements",
            "Implement manual processes if needed",
            "Prioritize critical business functions",
            "Regular status reporting"
          ]
        },
        {
          "phase": "Recovery",
          "duration": "24h-1w",
          "description": "Gradual return to normal operations",
          "activities": [
            "Restore business systems",
            "Resume normal processes",
            "Clear backlog of work",
            "Verify all functions operational"
          ]
        },
        {
          "phase": "Return to Normal",
          "duration": "1w+",
          "description": "Full normalization of operations",
          "activities": [
            "Confirm all processes restored",
            "Stand down interim arrangements",
            "Conduct post-incident review",
            "Update plans based on lessons learned"
          ]
        }
      ],
      "activation_checklist": [
        {"item": "Assess business impact", "required": true},
        {"item": "Notify business continuity team", "required": true},
        {"item": "Determine if alternate site needed", "required": true},
        {"item": "Activate critical staff callbacks", "required": true},
        {"item": "Implement priority-based recovery", "required": true}
      ],
      "roles_responsibilities": [
        {"role": "BC Coordinator", "responsibilities": ["Overall coordination", "Resource allocation", "Status reporting"]},
        {"role": "Department Leads", "responsibilities": ["Department recovery", "Staff coordination", "Process workarounds"]},
        {"role": "HR Representative", "responsibilities": ["Staff welfare", "Work arrangements", "Communication support"]}
      ]
    },
